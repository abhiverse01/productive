{
    "manifest_version": 3,
    "name": "Productive",
    "version": "1.0",
    "description": "A Chrome extension to manage and remind you of daily and long-term tasks with a productivity dashboard.",
    "permissions": [
      "storage",
      "notifications",
      "alarms",
      "tabs"
    ],
    "chrome_url_overrides": {
      "newtab": "dashboard.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data:"
    }
  }
  